<div class="page-wrapper">
    {{> menu}}
    <div class="page-container">
        {{> notification }}
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <strong>Editing ... </strong> {{country.name}}
                                </div>
                                <div class="card-body card-block">
                                    <form action="/dashboard/update/flag" method="post" class="form-horizontal"
                                        enctype="multipart/form-data">
                                        <input type="hidden" name="id" value="{{country._id}}">
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="text-input" class=" form-control-label">Upload flag</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="file" id="text-input" name="flag" placeholder="Name"
                                                    required class="form-control">
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="fa fa-dot-circle-o"></i> Update
                                        </button>
                                        <a href="/dashboard" class="btn btn-danger btn-sm">
                                            <i class="fa fa-backward"></i> Cancel and Back
                                        </a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{> footer}}
                </div>
            </div>
        </div>
    </div>
</div>