<div class="page-wrapper">
    {{> menu}}
    <div class="page-container">
        {{> notification }}
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <strong>Config main</strong>
                                </div>
                                <div class="card-body card-block">
                                    <form action="/dashboard/config" method="post" class="form-horizontal">
                                        <input type="hidden" name="id" value="{{config._id}}">
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="text-input" class=" form-control-label">Facebook</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="text" id="text-input" name="fb"
                                                    class="form-control" value="{{config.fb}}">
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="text-input" class=" form-control-label">Instagram</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="text" id="text-input" name="ins"
                                                    class="form-control" value="{{config.ins}}">
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="text-input" class=" form-control-label">Twitter</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="text" id="text-input" name="tw"
                                                    class="form-control" value="{{config.tw}}">
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="text-input" class=" form-control-label">Youtube</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="text" id="text-input" name="yt"
                                                    class="form-control" value="{{config.yt}}">
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="text-input" class=" form-control-label">Phone</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="text" id="text-input" name="phone"
                                                    class="form-control" value="{{config.phone}}">
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="text-input" class=" form-control-label">Email</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <input type="text" id="text-input" name="email"
                                                    class="form-control" value="{{config.email}}">
                                            </div>
                                        </div>

                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="textarea-input"
                                                    class=" form-control-label">About Us</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <textarea name="about" id="about" rows="9"
                                                    placeholder="Content..."
                                                    class="form-control">{{config.about}}</textarea>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="textarea-input"
                                                    class=" form-control-label">Term of Use</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <textarea name="term" id="term" rows="9"
                                                    placeholder="Content..."
                                                    class="form-control">{{config.term}}</textarea>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-3">
                                                <label for="textarea-input"
                                                    class=" form-control-label">Short text</label>
                                            </div>
                                            <div class="col-12 col-md-9">
                                                <textarea name="text" id="textarea-input" rows="9"
                                                    placeholder="Content..."
                                                    class="form-control">{{config.text}}</textarea>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-sm">
                                            <i class="fa fa-dot-circle-o"></i> Update
                                        </button>
                                        <a href="/dashboard" class="btn btn-danger btn-sm">
                                            <i class="fa fa-backward"></i> Cancel and Back
                                        </a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{> footer}}
                </div>
            </div>
        </div>
    </div>
</div>