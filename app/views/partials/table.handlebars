<div class="container mt-4 mb-4 mx-4">
    <!-- START SECTION HOW IT WORKS -->
    <section class="how-it-works bg-white">
        <div class="container">
            <div class="row service-1">
                <div class="col-lg-12 col-md-12 col-xs-12 ">

                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>FLAG</th>
                                <th>COUNTRY NAME</th>
                                <th>COUNTRY CODE</th>
                                <th>ISO CODES</th>
                                <th>CONTINENT</th>
                                <th>CAPITAL</th>
                                <th>CURRENCY</th>


                            </tr>
                        </thead>
                        <tbody>
                            {{#each country}}
                            <tr>
                                <th>
                                    {{#if flag}}
                                        <img src="/flags{{flag}}" width="30px" height="30px" />
                                    {{/if}}
                                </th>
                                <th scope="row"><a href="/details?country={{iso2}}">{{name}}</a></th>
                                <td>{{phoneCode}}</td>
                                <td>{{iso2}} / {{iso3}}</td>
                                <td>{{continent}}</td>
                                <td>{{capital}}</td>
                                <td>{{currency}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </section>
    <!-- END SECTION HOW IT WORKS -->
</div>